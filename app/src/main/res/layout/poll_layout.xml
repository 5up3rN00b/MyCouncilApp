<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="#00FFFFFF"
    android:divider="@null"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/profilePictureImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/namePollTextView"
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:fontFamily="@font/bebas_regular"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="Name"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/branchNamePollTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:fontFamily="@font/bebas_regular"
                android:gravity="center_vertical|right"
                android:paddingRight="5dp"
                android:text="From: Branch Name"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="496dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.157">

        <TextView
            android:id="@+id/pollTitleTextView"
            android:gravity=""
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:fontFamily="@font/bebasneue_bold"
            android:paddingLeft="15dp"
            android:text="Poll Title"
            android:textSize="45sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/pollOption1"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/path1"
            android:bufferType="normal"
            android:button="@drawable/whitecircle"
            android:checked="false"
            android:paddingLeft="5dp"
            android:text="Option 1"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF" />

        <ProgressBar
            android:id="@+id/pollOption1ProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:indeterminate="false"
            android:max="100"
            android:progress="0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/pollOption2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/path1"
            android:bufferType="normal"
            android:button="@drawable/whitecircle"
            android:checked="false"
            android:paddingLeft="5dp"
            android:text="Option 2"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF" />

        <ProgressBar
            android:id="@+id/pollOption2ProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:max="100"
            android:progress="0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/pollOption3"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/path1"
            android:bufferType="normal"
            android:button="@drawable/whitecircle"
            android:checked="false"
            android:paddingLeft="5dp"
            android:text="Option 3"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF" />

        <ProgressBar
            android:id="@+id/pollOption3ProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:max="100"
            android:progress="0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/pollOption4"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/path1"
            android:bufferType="normal"
            android:button="@drawable/whitecircle"
            android:checked="false"
            android:paddingLeft="5dp"
            android:text="Option 4"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF" />

        <ProgressBar
            android:id="@+id/pollOption4ProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:max="100"
            android:progress="0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/noneOfTheAboveOption"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/path1"
            android:bufferType="normal"
            android:button="@drawable/whitecircle"
            android:checked="false"
            android:paddingLeft="5dp"
            android:text="None of the Above"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF" />

        <ProgressBar
            android:id="@+id/noneOfTheAboveOptionProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:max="100"
            android:progress="0" />

    </LinearLayout>

</LinearLayout>